<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Perl 6 Editor"
            extensions="p6"
            icon="icons/cameliafav.png"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="perl6editor.editors.Perl6Editor"
            id="perl6editor.editors.Perl6Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="perl6-editor.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="perl6-editor.commands.category"
            id="perl6-editor.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="perl6editor.handlers.EvalHandler"
            commandId="perl6-editor.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="perl6-editor.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="perl6-editor.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="perl6-editor.commands.sampleCommand"
                  id="perl6-editor.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="perl6-editor.toolbars.sampleToolbar">
            <command
                  commandId="perl6-editor.commands.sampleCommand"
                  icon="icons/cameliafav.png"
                  id="perl6-editor.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
